<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin WAE | Config Page News Content</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <% include ./partials/static_header %>
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <% include ./partials/header %>

        <!-- Left side column. contains the logo and sidebar -->
        <% const dataSidebar = {
            activeConfig: true,
            activeConfigNews: true
        } %>
        <%- include('./partials/sidebar', dataSidebar) -%>

        
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <% const dataBreadcrumb = {
                title: 'Config Page News Content',
                smallTitle: 'Update content page news',
                isDashboard: false,
                pageTitle: 'Config page news content'
            } %>
            <%- include('./partials/breadcrumb', dataBreadcrumb) -%>

            <!-- Main content -->
            <section class="content">
                <%
                    let content = {};
                    if(locals.config && locals.config.content) {
                        content = JSON.parse(config.content);
                    }
                %>
                <div class="row">
                    <div class="col-lg-11 col-md-11 col-sm-12 col-xs-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Content Page News </h3>
                            </div>
                            <!-- /.box-header -->
                            <!-- form start -->
                            <form role="form" action="/adm/config/news" method="POST">
                                <div class="box-body">
                                    <div class="form-group">
                                        <label for="pageTitle">Page Title</label>
                                        <input type="text" class="form-control" id="pageTitle" name="pageTitle" placeholder="example: Trang chá»§" value="<%=(content && content.pageTitle)?content.pageTitle:""%>">
                                    </div>
                                    <hr>
                                    <div class="form-group">
                                        <label for="newsImgBackground">News Mainpage - Image Background (1900x1280)</label>
                                        <input type="text" class="form-control" id="newsImgBackground" name="newsImgBackground" placeholder="example: https://news.nationalgeographic.com/content/dam/news/photos/000/890/89070.ngsversion.1425757154489.adapt.1900.1.jpg" value="<%=(content && content.newsImgBackground)?content.newsImgBackground:"" %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="newsBigText">News Mainpage - Bigger Text</label>
                                        <input type="text" class="form-control" id="newsBigText" name="newsBigText" placeholder="example: HELLO & WELCOME" value="<%=(content && content.newsBigText)?content.newsBigText:"" %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="newsSmallText">News Mainpage - Smaller Text</label>
                                        <input type="text" class="form-control" id="newsSmallText" name="newsSmallText" placeholder="example: WE ARE ENGINEERS" value="<%=(content && content.newsSmallText)?content.newsSmallText:"" %>">
                                    </div>
                                </div>
                                <!-- /.box-body -->

                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <% include ./partials/footer %>
    </div>
    <!-- ./wrapper -->
    <% include ./partials/static_footer %>
</body>

</html>